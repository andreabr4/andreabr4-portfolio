---
import i18next, { t } from "i18next";
import ProgrammingIcon from "./icons/ProgrammingIcon.astro";
import JavaScriptIcon from "./icons/JavaScriptIcon.astro";
import TypeScriptIcon from "./icons/TypeScriptIcon.astro";
---

<div class="border-b border-gray-200/70">
  <div class="flex items-center">
   <ProgrammingIcon/>
    <h2 class="text-sm font-semibold uppercase ml-4">{t("programming.langs")}</h2>
  </div>

  <ul
    class="mt-[2rem] flex flex-wrap md:flex-nowrap gap-x-6 md:gap-x-3 gap-y-4 md:space-x-5 max-w-[700px] mb-5"
  >
  <li>
    <JavaScriptIcon />
    <p class="text-sm">JavaScript</p>
  </li>

  <li>
    <TypeScriptIcon />
    <p class="text-sm">TypeScript</p>
  </li>
  </ul>
</div>
