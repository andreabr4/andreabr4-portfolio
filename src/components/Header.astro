---
import i18next, { t } from 'i18next';
import LanguageSelection from "../components/LanguageSelection.astro";
---
<header
  class="flex justify-between items-center py-5 w-full xl:w-[1120px] mx-auto"
>
  <!-- PONER SPAN EN CASO DE QUITAR LA FOTO DE ICONO PARA NO PERDER ESTRUCTURA: <span></span> -->
  <img
    class="rounded-full w-12 h-12"
    src="../../profile-image.jpg"
    alt="profile photo"
  />
  <nav class="flex flex-row gap-x-10 opacity-80">


    <a href="#about-me">{t('nav.about')}</a>
    <a href="#skills">{t("nav.skills")}</a>
    <a href="#projects">{t("nav.projects")}</a>
    <a href="#education">{t("nav.education")}</a>
    <a href="#contact">{t("nav.contact")}</a>
    
    <LanguageSelection/>
  </nav>
</header>
