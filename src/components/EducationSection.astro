---
import University from "../components/icons/University.astro";
import MasterIcon from "../components/icons/MasterIcon.astro";
import Date from "../components/Date.astro";
import Code from "../components/icons/Code.astro";
import i18next, { t, changeLanguage } from "i18next";

const { class: className, id, customComponent, children } = Astro.props;

const cardClass = `card flex w-full lg:card-side mb-4 mt-2 ${className}`;
---

<div class={cardClass}>
  <figure class="size-12">
    <Code />
  </figure>
  <div class="card-body ml-6">
    <p>{t("education.bootcamp")}</p>
    <span class="text-[#f20548]">2023</span>
  </div>

</div>

<div class={cardClass}>
  <figure class="size-12 flex-shrink-0">
    <University />
  </figure>
  <div class="card-body ml-6">
    <p class="flex-wrap text-pretty">
    {t("education.degree")}
    </p>
    <span class="text-[#f20548]">2016-2020</span>
  </div>
</div>

<div class=`mt-6 ${cardClass}`>
  <figure class="size-12 flex-shrink-0">
    <MasterIcon />
  </figure>
  <div class="card-body ml-6">
    <p class="flex-wrap text-pretty">
    {t("education.master")}
    </p>
    <span class="text-[#f20548]">2022-2024</span>
  </div>
</div>
